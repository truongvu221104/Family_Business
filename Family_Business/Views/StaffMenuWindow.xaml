<Window x:Class="Family_Business.Views.StaffMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Nhân viên" Height="320" Width="340"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="MENU NHÂN VIÊN" FontSize="22" FontWeight="Bold" 
                   Margin="0,0,0,28" TextAlignment="Center" />
        <Button Content="Tạo và  Quản lý hóa đơn bán hàng" Width="230" Height="42" Margin="0,0,0,14" Click="BtnNewInvoice_Click"/>
        <Button Content="Quản lý khách hàng" Width="230" Height="42" Margin="0,0,0,14" Click="BtnCustomer_Click"/>
        <Button Content="Xem lịch sử giao dịch" Width="230" Height="42" Margin="0,0,0,26" Click="BtnTransactionHistory_Click"/>
        <Button Content="Đăng xuất" Width="120" Height="34" Click="BtnLogout_Click"/>
    </StackPanel>
</Window>
