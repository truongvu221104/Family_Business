<UserControl x:Class="Family_Business.Views.NewInvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: InvoiceDateTime -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Khách hàng -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Sản phẩm -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Loại bán -->
            <RowDefinition Height="Auto"/>
            <!-- 4: SL & Thành tiền -->
            <RowDefinition Height="Auto"/>
            <!-- 5: Khách trả & Trạng thái -->
            <RowDefinition Height="Auto"/>
            <!-- 6: Ngày đáo hạn -->
            <RowDefinition Height="*"/>
            <!-- spacer -->
            <RowDefinition Height="Auto"/>
            <!-- 7: Nút -->
        </Grid.RowDefinitions>

        <!-- 0) Thời điểm tạo hóa đơn -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Ngày lập HĐ:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding InvoiceDateTime, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"
                 FontWeight="Bold" Margin="5,0"/>
        </StackPanel>

        <!-- 1) Khách hàng -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Tìm khách:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtCustomerFilter" Width="150" Margin="5,0"
               TextChanged="TxtCustomerFilter_TextChanged"/>
            <TextBlock Text="Chọn khách:" VerticalAlignment="Center" Margin="15,0,5,0"/>
            <ComboBox x:Name="cbCustomer" Width="200" DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- 2) Sản phẩm -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Tìm SP:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtProductFilter" Width="150" Margin="5,0"
               TextChanged="TxtProductFilter_TextChanged"/>
            <TextBlock Text="Chọn SP:" VerticalAlignment="Center" Margin="15,0,5,0"/>
            <ComboBox x:Name="cbProduct" Width="200" DisplayMemberPath="Name"
                SelectionChanged="CbProduct_SelectionChanged"/>
            <TextBlock Text="Đơn vị:" VerticalAlignment="Center" Margin="15,0,0,0"/>
            <TextBlock x:Name="lblUnitName" Width="80" VerticalAlignment="Center"/>
            <TextBlock Text="SL còn:" VerticalAlignment="Center" Margin="15,0,0,0"/>
            <TextBlock x:Name="lblInventory" Width="60" Foreground="DarkGreen" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 3) Loại bán -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Loại bán:" VerticalAlignment="Center"/>
            <RadioButton x:Name="rbRetail" Content="Bán lẻ" IsChecked="True"
                   Margin="5,0" Checked="SaleModeChanged"/>
            <RadioButton x:Name="rbWholesale" Content="Bán sỉ"
                   Margin="15,0,0,0" Checked="SaleModeChanged"/>
        </StackPanel>

        <!-- 4) Số lượng & Thành tiền -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Số lượng:" VerticalAlignment="Center"/>
            <TextBox x:Name="tbQuantity" Width="60" Margin="5,0"
               Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Thành tiền:" VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBlock Width="120" TextAlignment="Right"
                 Text="{Binding Total, StringFormat=N2}"/>
        </StackPanel>

        <!-- 5) Khách trả & Trạng thái -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,0,0,10">
            <TextBox x:Name="tbPaid" Width="120" Margin="5,0"
   Text="{Binding Paid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"/>
            <Button Content="Thanh toán đủ" Margin="5,0,0,0" Width="100" Click="BtnPayFull_Click"/>


            <TextBlock Text="Trạng thái:" VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBlock Width="200" FontWeight="Bold"
                 Text="{Binding Status}"/>
        </StackPanel>

        <!-- 6) NGÀY ĐÁO HẠN (chỉ enable khi đang nợ) -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,0,0,10">
            <TextBlock Text="Ngày đáo hạn:" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding DueDate, Mode=TwoWay}"
                  IsEnabled="{Binding IsDebt}"
                  Width="130" Margin="5,0"/>
        </StackPanel>

        <!-- 7) Nút Lưu / Hủy -->
        <StackPanel Orientation="Horizontal" Grid.Row="8"
                HorizontalAlignment="Right">
            <Button Content="Lưu hóa đơn" Width="100" Margin="0,0,5,0"
              Click="BtnSave_Click"/>
            <Button Content="Hủy" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
