<UserControl x:Class="Family_Business.Views.SupplierDebtOverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filter panel -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Payment panel -->
        </Grid.RowDefinitions>

        <!-- 0) Filter panel -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Tìm kiếm (Tên/SĐT):" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFilterNameOrPhone" Width="200" Margin="5,0"
                     TextChanged="Filter_Changed"/>
            <Button Content="Xóa lọc" Margin="20,0,0,0" Click="BtnClearFilter_Click"/>
        </StackPanel>

        <!-- 1) Bảng NCC còn nợ -->
        <DataGrid x:Name="dgSuppliers"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionChanged="DgSuppliers_SelectionChanged"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nhà cung cấp" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Điện thoại" Binding="{Binding PhoneNumber}" Width="150"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Số nợ" Binding="{Binding OutstandingPayable, StringFormat=N2}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 2) Panel trả nợ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Số nợ hiện tại:" VerticalAlignment="Center"/>
            <TextBox x:Name="tbOwed" Width="120" Margin="5,0" IsReadOnly="True"/>

            <TextBlock Text="Nhập số tiền trả:" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="tbPayment" Width="120" Margin="5,0"/>

            <Button x:Name="btnPay" Content="Trả nợ" Width="100" Margin="20,0,0,0" Click="BtnPay_Click"/>
        </StackPanel>
    </Grid>
</UserControl>